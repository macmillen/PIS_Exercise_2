<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<GridPane fx:controller="pis.hue2.server.ServerController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>


    <Button fx:id="startButton" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.valignment="TOP" text="Start"
            onAction="#startServer"/>
    <Button fx:id="stopButton" GridPane.rowIndex="0" GridPane.columnIndex="1" text="Stop" onAction="#closeServer"/>

    <TextArea fx:id="textArea" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="4"
              GridPane.rowSpan="2" disable="true"/>

</GridPane>