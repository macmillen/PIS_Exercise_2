<?import java.net.URL?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane fx:controller="pis.hue2.client.ClientController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="root">

    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="80"/>
        <RowConstraints percentHeight="10"/>
    </rowConstraints>

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Button fx:id="btnConnect" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#connect"
            text="Connect"/>
    <Button fx:id="btnDisconnect" GridPane.rowIndex="0" GridPane.columnIndex="1"
            text="Disconnect"/>
    <TextArea fx:id="chat" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.rowSpan="3" GridPane.columnSpan="2"
              editable="false"/>
    <TextField fx:id="chatInput" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <stylesheets>
        <URL value="@ClientCSS.css"/>
    </stylesheets>
</GridPane>