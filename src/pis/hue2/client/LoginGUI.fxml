<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pis.hue2.client.ClientController"
      prefHeight="400.0" prefWidth="600.0" alignment="CENTER" spacing="10">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label fx:id="labelLogin" text="Enter your name"/>
    <TextField fx:id="textFieldLogin"/>
    <Button fx:id="btnLogin" onAction="#btnLogin" text="Confirm"/>

</VBox>
